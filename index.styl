*
    box-sizing border-box
    margin 0
    padding 0

input[type='checkbox']
    padding 10px 30px

h1, h2, h3
    margin-bottom 10px

body
    font-family sans-serif

nav
    display flex
    flex-flow row wrap
    justify-content space-between
    padding 10px 20px
    border 1px solid #000

    img
        height 40px 
        width 40px




main
    padding 10px 20px

    .form-container
        display flex
        flex-flow column wrap
        justify-content space-between
        height 100px
        margin-bottom 30px

footer
    border 1px solid #00
    padding 10px 20px

