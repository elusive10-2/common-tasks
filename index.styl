*
    box-sizing border-box
    margin 0
    padding 0

input 
    margin-bottom 12px

input[type='checkbox']
    width 20px
    height 20px

input[type='radio']
    width 20px
    height 20px

option
    padding 10px 30px

h1, h2, h3
    margin-top 10px
    margin-bottom 10px

button 
    padding 20px 40px

body
    font-family sans-serif

nav
    display flex
    flex-flow row wrap
    justify-content space-between
    padding 10px 20px
    background-image: linear-gradient(to right, #e4e4e4, white)

    img
        height 40px 
        width 40px

main
    padding 10px 20px

    .form-container
        display flex
        flex-flow column wrap
        justify-content space-between
        height 100px
        margin-bottom 30px

footer
    display flex
    flex-flow row wrap
    justify-content center
    border 1px solid #00
    padding 10px 20px

    font-size .8rem
